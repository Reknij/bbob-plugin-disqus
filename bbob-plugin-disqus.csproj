<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>To enable disqus comment platform.</Description>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>bbob_plugin_disqus</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Reknij/Bbob</RepositoryUrl> 
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bbob.Plugin" Version="1.2.1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="./plugin.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
  </ItemGroup>

</Project>
